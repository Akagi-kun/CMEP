Checks: '-*,clang-analyzer-*,readability-identifier-naming,readability-redundant-*,readability-magic-numbers,modernize-use-*,-modernize-use-using,-modernize-use-trailing-return-type'
CheckOptions:
  - key: readability-identifier-naming.VariableCase
    value: 'lower_case'
  - key: readability-identifier-naming.FunctionCase
    value: 'CamelCase'
  - key: readability-identifier-naming.MemberCase
    value: 'lower_case'
  - key: readability-identifier-naming.MethodCase
    value: 'CamelCase'
  - key: readability-magic-numbers.IgnorePowersOf2IntegerValues
    value: true